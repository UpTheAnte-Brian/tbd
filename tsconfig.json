{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx", // or "preserve" for React -17
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["./app/*"],
      "@/components/*": ["app/components/*"],
      "@/utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules", ".next", "supabase/functions", "scripts/functions"]
}